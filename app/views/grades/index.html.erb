<%= Gym.find(params[:gym_id]).grades.each do |grade|%>
	<%= form_with model: grade do |form|%>
		<div class ="input-group mb-3">
			<%= form.text_field :label, class: "form-control" %>
		</div>
	<% end %>

<%end%>

<div class="collapse" id="addGrade">
	<div class="card card-body" >
		<%= form_with(model: @Grade, local: true) do |form| %>
			<%= form.text_field :label, class: "form-control"%>
			<%= form.submit :Submit, class: 'btn btn-outline-secondary' %>
		<% end %>
	</div>
</div>

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addGrade" aria-expanded="false" aria-controls="collapseExample">
    <svg class="bi bi-plus" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
      <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
    </svg>
</button>